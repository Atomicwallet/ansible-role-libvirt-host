<pool type='{{ item.type }}'>
  <name>{{ item.name }}</name>
  {% if 'capacity' in item %}
  <capacity>{{ item.capacity }}</capacity>
  {% endif %}
  {% if item.type == 'lvm2' %}
  <source>
    <name>{{ item.source }}</name>
    <format type='lvm2'/>
  </source>
  {% endif %}
  <target>
    <path>{{ item.path | default('placeholder_value') }}</path>
  </target>
</pool>
